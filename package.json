{
  "name": "ultimate-b2b-saas-boilerplate",
  "description": "The ultimate boilerplate for building SAAS applications with React, Firebase, Stripe, Tailwind CSS and TypeScript.",
  "version": "0.0.0",
  "private": true,
  "main": "./packages/functions/dist/functions/src/index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "activate-project": "firebase use",
    "deploy": "firebase deploy --only firestore,functions,hosting",
    "deploy:staging": "export MODE=staging && yarn deploy",
    "deploy:production": "export MODE=production && yarn deploy",
    "deploy:release": "cd ./packages/scripts && yarn deploy:release"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "turbo": "latest"
  }
}
