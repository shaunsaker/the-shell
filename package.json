{
  "name": "ultimate-b2b-saas-boilerplate",
  "description": "The ultimate boilerplate for building SAAS applications with React, Firebase, Stripe, Tailwind CSS and TypeScript.",
  "version": "0.0.0",
  "private": true,
  "main": "./packages/functions/dist/functions/src/index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev",
    "dev:stripe": "stripe listen --forward-to http://127.0.0.1:5001/the-shell-development/us-central1/stripeWebhookFunction",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "deploy": "firebase deploy --only functions,firestore:rules,hosting"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "turbo": "latest"
  }
}
