{
  "name": "emails",
  "version": "0.0.18",
  "private": true,
  "workspaces": [
    ".react-email"
  ],
  "scripts": {
    "dev": "cp .env .react-email/.env && email dev --port 3000",
    "lint:prettier": "prettier -c \"**/*.{ts,tsx}\"",
    "lint:eslint": "eslint --ext [.ts,.tsx] .",
    "lint:ts": "tsc",
    "lint": "npm-run-all --parallel lint:*",
    "build": "cp .env .react-email/.env && email export --pretty true"
  },
  "dependencies": {
    "@react-email/components": "0.0.6",
    "@react-email/render": "0.0.7",
    "dotenv": "^16.3.1",
    "react-email": "1.9.3",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-tailwindcss": "^3.12.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "tsconfig": "*",
    "typescript": "^5.1.6"
  }
}
