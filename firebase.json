{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "runtime": "nodejs18",
      "predeploy": "cd ./packages/functions && yarn build",
      "source": "./packages/functions/dist"
    }
  ],
  "hosting": {
    "predeploy": "cd ./packages/scripts && yarn build && cd ../functions && cd ../app && yarn build:app",
    "public": "./packages/app/dist",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
